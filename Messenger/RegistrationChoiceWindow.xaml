<Window x:Class="Messenger.RegistrationChoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Messenger"
        mc:Ignorable="d"
        Title="Регистрация" 
        Height="500" 
        Width="950"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" 
                Background="White" 
                BorderBrush="#E0E0E0" 
                BorderThickness="0,0,0,1">
            <Grid Margin="15,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="BackButton" 
                        Grid.Column="0"
                        Width="40"
                        Height="40"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="BackButton_Click">
                    <Button.Content>
                        <TextBlock Text="←" 
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="#333333"/>
                    </Button.Content>
                </Button>

                <TextBlock Grid.Column="1"
                           Text="Выберите способ входа" 
                           Foreground="Black" 
                           FontSize="20" 
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="1" MaxWidth="1"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" 
                    Background="White" 
                    Margin="20,0,10,30"
                    CornerRadius="8"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Создать аккаунт" 
                               Foreground="Black" 
                               FontSize="20" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,20,0,20"
                               Grid.Row="0"/>

                    <StackPanel Grid.Row="1" 
                                Margin="30,0,30,0"
                                VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <TextBlock Text="✓" 
                                       Foreground="#4CAF50" 
                                       FontSize="16" 
                                       FontWeight="Bold"
                                       Width="20"
                                       TextAlignment="Center"
                                       VerticalAlignment="Top"/>
                            <TextBlock Text="Доступ к личным чатам" 
                                       Foreground="#333333"
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       Margin="10,0,0,0"
                                       TextWrapping="Wrap"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <TextBlock Text="✓" 
                                       Foreground="#4CAF50" 
                                       FontSize="16" 
                                       FontWeight="Bold"
                                       Width="20"
                                       TextAlignment="Center"
                                       VerticalAlignment="Top"/>
                            <TextBlock Text="Доступ к файлам и медиа" 
                                       Foreground="#333333"
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       Margin="10,0,0,0"
                                       TextWrapping="Wrap"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <TextBlock Text="✓" 
                                       Foreground="#4CAF50" 
                                       FontSize="16" 
                                       FontWeight="Bold"
                                       Width="20"
                                       TextAlignment="Center"
                                       VerticalAlignment="Top"/>
                            <TextBlock Text="Возможность кастомизации" 
                                       Foreground="#333333"
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       Margin="10,0,0,0"
                                       TextWrapping="Wrap"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <TextBlock Text="✓" 
                                       Foreground="#4CAF50" 
                                       FontSize="16" 
                                       FontWeight="Bold"
                                       Width="20"
                                       TextAlignment="Center"
                                       VerticalAlignment="Top"/>
                            <TextBlock Text="Возможность использовать игровые активности" 
                                       Foreground="#333333"
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       Margin="10,0,0,0"
                                       TextWrapping="Wrap"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <TextBlock Text="✓" 
                                       Foreground="#4CAF50" 
                                       FontSize="16" 
                                       FontWeight="Bold"
                                       Width="20"
                                       TextAlignment="Center"
                                       VerticalAlignment="Top"/>
                            <TextBlock Text="Доступ к таблице лидеров" 
                                       Foreground="#333333"
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       Margin="10,0,0,0"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </StackPanel>

                    <Button x:Name="CreateAccountBtn" 
                            Content="Создать" 
                            Height="45"
                            Width="200"
                            Margin="0,0,0,20"
                            FontSize="16"
                            FontWeight="Bold"
                            Cursor="Hand" 
                            HorizontalAlignment="Center"
                            Grid.Row="2"
                            Click="CreateAccountBtn_Click">

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" 
                                        Background="#8b00ff" 
                                        CornerRadius="5">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
                                </Border>

                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" 
                                                Property="Background" 
                                                Value="#6B3FA0"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>

                        <Button.Foreground>
                            <SolidColorBrush Color="White"/>
                        </Button.Foreground>
                    </Button>
                </Grid>
            </Border>

            <Border Grid.Column="1" 
                    Background="#E0E0E0" 
                    Margin="0,40,0,40"/>

            <Border Grid.Column="2" 
                    Background="White" 
                    Margin="10,0,20,30"
                    CornerRadius="8"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Войти как гость" 
                               Foreground="Black" 
                               FontSize="20" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,20,0,20"
                               Grid.Row="0"/>

                    <StackPanel Grid.Row="1" 
                                Margin="30,0,30,0"
                                VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <TextBlock Text="✓" 
                                       Foreground="#4CAF50" 
                                       FontSize="16" 
                                       FontWeight="Bold"
                                       Width="20"
                                       TextAlignment="Center"
                                       VerticalAlignment="Top"/>
                            <TextBlock Text="Доступ к общему чату аудитории" 
                                       Foreground="#333333"
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       Margin="10,0,0,0"
                                       TextWrapping="Wrap"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <TextBlock Text="✗" 
                                       Foreground="#F44336" 
                                       FontSize="16" 
                                       FontWeight="Bold"
                                       Width="20"
                                       TextAlignment="Center"
                                       VerticalAlignment="Top"/>
                            <TextBlock Text="Ограниченные возможности" 
                                       Foreground="#333333"
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       Margin="10,0,0,0"
                                       TextWrapping="Wrap"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <TextBlock Text="✗" 
                                       Foreground="#F44336" 
                                       FontSize="16" 
                                       FontWeight="Bold"
                                       Width="20"
                                       TextAlignment="Center"
                                       VerticalAlignment="Top"/>
                            <TextBlock Text="Запрет на отправку файлов" 
                                       Foreground="#333333"
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       Margin="10,0,0,0"
                                       TextWrapping="Wrap"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <TextBlock Text="✗" 
                                       Foreground="#F44336" 
                                       FontSize="16" 
                                       FontWeight="Bold"
                                       Width="20"
                                       TextAlignment="Center"
                                       VerticalAlignment="Top"/>
                            <TextBlock Name="random_ban_label"
                                       Text="Запрет на отправку файлов" 
                                       Foreground="#333333"
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       Margin="10,0,0,0"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </StackPanel>

                    <Button x:Name="LoginAsGuestBtn" 
                            Content="Войти" 
                            Height="45"
                            Width="200"
                            Margin="0,0,0,20"
                            FontSize="16"
                            FontWeight="Bold"
                            Cursor="Hand" 
                            HorizontalAlignment="Center"
                            Grid.Row="2"
                            Click="LoginAsGuestBtn_Click">

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" 
                                        Background="#8b00ff" 
                                        CornerRadius="5">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                  VerticalAlignment="Center"/>
                                </Border>

                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" 
                                                Property="Background" 
                                                Value="#6B3FA0"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>

                        <Button.Foreground>
                            <SolidColorBrush Color="White"/>
                        </Button.Foreground>
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>