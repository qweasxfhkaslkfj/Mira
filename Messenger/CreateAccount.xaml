<Window x:Class="Messenger.CreateAccount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Messenger"
        mc:Ignorable="d"
        Title="Создание аккаунта" 
        Height="700" 
        Width="600"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" 
                Background="White" 
                BorderBrush="#E0E0E0" 
                BorderThickness="0,0,0,1">
            <Grid Margin="15,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="BackButton" 
                        Grid.Column="0"
                        Width="40"
                        Height="40"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="BackButton_Click">
                    <Button.Content>
                        <TextBlock Text="←" 
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="#333333"/>
                    </Button.Content>
                </Button>

                <TextBlock Grid.Column="1"
                           Text="Создание аккаунта" 
                           Foreground="Black" 
                           FontSize="20" 
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <StackPanel VerticalAlignment="Center" 
                        HorizontalAlignment="Center"
                        Width="400"
                        Margin="0,20">

                <TextBlock Text="Настоящее ФИО" 
                           Foreground="#333333"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>

                <TextBox x:Name="fullNameTextBox" 
                         Height="35" 
                         FontSize="14"
                         Padding="10,0"
                         BorderBrush="#CCCCCC"
                         BorderThickness="1"
                         Background="White"
                         VerticalContentAlignment="Center"
                         KeyDown="FullNameTextBox_KeyDown"/>

                <Border Height="15"/>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Тег аккаунта" 
                               Foreground="#333333"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Margin="0,0,0,5"/>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0"
                                Background="#F5F5F5"
                                BorderBrush="#CCCCCC"
                                BorderThickness="1,1,0,1"
                                Height="35"
                                Padding="10,0">
                            <TextBlock Text="@"
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       Foreground="#666666"/>
                        </Border>

                        <TextBox x:Name="tagTextBox" 
                                 Grid.Column="1"
                                 Height="35" 
                                 FontSize="14"
                                 Padding="10,0"
                                 BorderBrush="#CCCCCC"
                                 BorderThickness="0,1,1,1"
                                 Background="White"
                                 VerticalContentAlignment="Center"
                                 KeyDown="TagTextBox_KeyDown"/>
                    </Grid>
                </Grid>

                <Border Height="15"/>

                <TextBlock Text="Пароль" 
                           Foreground="#333333"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>

                <PasswordBox x:Name="passwordTextBox" 
                             Grid.Column="0"
                             Height="35" 
                             FontSize="14"
                             Padding="10,0"
                             BorderBrush="#CCCCCC"
                             BorderThickness="1"
                             Background="White"
                             VerticalContentAlignment="Center"
                             KeyDown="PasswordTextBox_KeyDown"/>

                <TextBox x:Name="passwordVisibleTextBox" 
                         Grid.Column="0"
                         Height="35" 
                         FontSize="14"
                         Padding="10,0"
                         BorderBrush="#CCCCCC"
                         BorderThickness="1"
                         Background="White"
                         VerticalContentAlignment="Center"
                         Visibility="Collapsed"
                         KeyDown="PasswordVisibleTextBox_KeyDown"/>

                <Border Height="15"/>

                <TextBlock Text="Повторите пароль" 
                           Foreground="#333333"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>
                
                <PasswordBox x:Name="confirmPasswordTextBox" 
                             Grid.Column="0"
                             Height="35" 
                             FontSize="14"
                             Padding="10,0"
                             BorderBrush="#CCCCCC"
                             BorderThickness="1"
                             Background="White"
                             VerticalContentAlignment="Center"
                             KeyDown="ConfirmPasswordTextBox_KeyDown"/>

                <TextBox x:Name="confirmPasswordVisibleTextBox" 
                         Grid.Column="0"
                         Height="35" 
                         FontSize="14"
                         Padding="10,0"
                         BorderBrush="#CCCCCC"
                         BorderThickness="1"
                         Background="White"
                         VerticalContentAlignment="Center"
                         Visibility="Collapsed"
                         KeyDown="ConfirmPasswordVisibleTextBox_KeyDown"/>

                <Border Height="10"/>
                
                <CheckBox x:Name="showPasswordCheckBox"
                          Content="Показать пароль"
                          FontSize="13"
                          Foreground="#333333"
                          Margin="0,0,0,10"
                          Checked="ShowPasswordCheckBox_Checked"
                          Unchecked="ShowPasswordCheckBox_Unchecked"/>

                <Border Height="15"/>

                <TextBlock Text="Группа" 
                           Foreground="#333333"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>

                <TextBox x:Name="groupTextBox" 
                         Height="35" 
                         FontSize="14"
                         Padding="10,0"
                         BorderBrush="#CCCCCC"
                         BorderThickness="1"
                         Background="White"
                         VerticalContentAlignment="Center"
                         KeyDown="GroupTextBox_KeyDown"/>

                <Border Height="25"/>

                <Button x:Name="CreateAccountBtn" 
                        Content="Создать аккаунт" 
                        Height="45"
                        FontSize="16"
                        FontWeight="Bold"
                        Cursor="Hand" 
                        Click="CreateAccountBtn_Click">

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" 
                                    Background="#8b00ff" 
                                    CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>

                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" 
                                            Property="Background" 
                                            Value="#6B3FA0"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="border" 
                                            Property="Background" 
                                            Value="#CCCCCC"/>
                                    <Setter Property="Foreground" Value="#888888"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>

                    <Button.Foreground>
                        <SolidColorBrush Color="White"/>
                    </Button.Foreground>
                </Button>
            </StackPanel>
        </ScrollViewer>

        <Border Grid.Row="2" 
                Background="White" 
                BorderBrush="#E0E0E0" 
                BorderThickness="0,1,0,0">
            <StackPanel Margin="20,15"
                        HorizontalAlignment="Center">
                <TextBlock Text="После создания аккаунта вы получите доступ ко всем функциям" 
                           Foreground="#666666"
                           FontSize="13"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           TextAlignment="Center"/>
                <TextBlock Text="✓ Личные чаты   ✓ Файлы и медиа   ✓ Игровые активности   ✓ Таблица лидеров" 
                           Foreground="#4CAF50"
                           FontSize="12"
                           FontWeight="SemiBold"
                           Margin="0,8,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
